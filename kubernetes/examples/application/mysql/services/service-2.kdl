# Client service for connecting to any MySQL instance for reads.
# For writes, you must instead connect to the primary: mysql-0.mysql.

api-version = "v1"
kind = "Service"

[metadata]
name = "mysql-read"

[metadata.labels]
app = "mysql"
"app.kubernetes.io/name" = "mysql"
readonly = "true"

[[spec.ports]]
name = "mysql"
port = 3306

[spec.selector]
app = "mysql"
